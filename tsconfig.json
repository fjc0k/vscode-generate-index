{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "outDir": "out",
    "lib": ["ES2018"],
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "strict": true,
    "newLine": "lf",
    "plugins": [
      {
        "name": "typescript-snapshots-plugin",
        "snapshotCallIdentifiers": [
          "toMatchSnapshot",
          "toThrowErrorMatchingSnapshot",
          "toMatchDiffSnapshot"
        ]
      }
    ]
  }
}
